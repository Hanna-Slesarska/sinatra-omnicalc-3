  <input id="new_message_field" type="text" name="user_message" placeholder="Enter a message...." data-dashlane-rid="11081e306569dc9c" data-form-type="other">

  <button data-dashlane-label="true" data-dashlane-rid="9e79526cbe21c018" data-form-type="other">Send</button>
</form>

