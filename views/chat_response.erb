<dl>
<% cookies.each do |key, value| %>
    <dt>user</dt>
    <dd><%= key.gsub(/[^0-9A-Za-z]/, ' ').gsub("3F", "?") %></dd>
    <!--<dd></dd>-->
    
    <dt>assistant</dt>
    <dd><%= value.gsub("+", " ").gsub(/[^0-9A-Za-z]/, ' ').gsub("2C", "") %></dd>
    <!--<dd></dd>-->
    
    <% end %>

</dl>

<form action="/add_message_to_chat" method="post" data-dashlane-rid="1b256b2474852d41" data-form-type="other">
